<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="650.0" prefWidth="850.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projetosyslocacar.controller.ModeloFormularioController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Cadastro e Listagem de Modelos" style="-fx-font-size: 16pt;" />

        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="ID:" GridPane.rowIndex="0" />
                <TextField fx:id="txtId" editable="false" promptText="Gerado Automaticamente" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Nome do Modelo:" GridPane.rowIndex="1" />
                <TextField fx:id="txtNome" promptText="Ex: Onix 1.0, Civic LX" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Ano (ou Data):" GridPane.rowIndex="2" />
                <TextField fx:id="txtAno" promptText="Ex: 2024" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Marca:" GridPane.rowIndex="3" />
                <ComboBox fx:id="cmbMarca" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Categoria:" GridPane.rowIndex="4" />
                <ComboBox fx:id="cmbCategoria" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="ID do Modelo (Código):" GridPane.rowIndex="5" />
                <TextField fx:id="txtIdModelo" promptText="Código interno" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
        </GridPane>



        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleAtualizarLista" text="Atualizar Lista" />
                <Button mnemonicParsing="false" onAction="#handleSalvar" text="Salvar/Atualizar" />
                <Button mnemonicParsing="false" onAction="#handleLimparFormulario" text="Novo Cadastro" />
            </children>
        </HBox>

        <Label text="Modelos Cadastrados (Galeria)" style="-fx-font-size: 12pt; -fx-font-weight: bold;" />

        <TableView fx:id="tabelaModelos" VBox.vgrow="ALWAYS" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colNome" prefWidth="150.0" text="Nome" />
                <TableColumn fx:id="colAno" prefWidth="100.0" text="Ano" />
                <TableColumn fx:id="colMarca" prefWidth="120.0" text="Marca" />
                <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoria" />
                <TableColumn fx:id="colCodModelo" prefWidth="80.0" text="Cód." />

                <TableColumn fx:id="colAcoes" prefWidth="150.0" text="Ações" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleEditarModelo" text="Editar Selecionado" />
                <Button mnemonicParsing="false" onAction="#handleDeletarModelo" text="Deletar Selecionado" />
            </children>
        </HBox>
    </children>
</VBox>